<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.edu.file">

	<insert id="save" parameterType="FileVO">
		INSERT INTO FILESTORE (
			POST_NUM
			,O_NAME
			,R_NAME
			,REG_DT
		) VALUES (
			#{postNum}
			,#{oName}
			,#{rName}
			,now()
		)
	</insert>

	<select id="retrieve" parameterType="SearchVO" resultType="FileVO">	
		SELECT *
		FROM FILESTORE
		WHERE POST_NUM = #{postNum}
		ORDER BY REG_DT
	</select>

	<select id="selectOne" parameterType="FileVO" resultType="FileVO">	
		SELECT PATH
		FROM FILESTORE
		WHERE POST_NUM = #{postNum}
		AND R_Name = #{rName}
	</select>
	
	<select id="delete" parameterType="FileVO" resultType="FileVO">
		DELETE FROM FILESTORE
		AND POST_NUM = #{postNum}
	</select>

</mapper>